.aboutUsHead{
  padding: 0 0 1rem 0;
  text-align: center;
  color: rgb(102,102,102);
}
.aboutUsHead > text{
  display: block;
}
.appName{
  font-size: 2rem;
  font-weight: bolder;
}
.appNameTitle{
  font-size: 0.6rem;
}
.appIntroduction{
  background-color: rgb(102,102,102);  
  text-align: center;
  height: 8rem;
  position: relative;
}

.appIntroductionContent{
  position: relative;
  font-size: 0.8rem;
  margin: 0 auto;
  text-align: justify;
  width: 70%;
  border: 2px solid white;
  box-sizing: border-box;
  padding: 1rem 0.5rem 0.5rem;
  color: white;
  top: -0.5rem;
}
.authInfo {
  box-sizing: border-box;
  font-size: 0.8rem;
  width: 70%;
  margin: 0 auto;
  padding: 1rem 0.5rem;
}
.reward {
  text-align: center;
  margin: 5px 0; 
  position: relative; 
}
.rewardText {
  font-size: 0.6rem;
  color: #888888;
}
.rewardButton {
  width: 20%;
  font-size: 0.8rem;
  background-color: red;
  color: white;
  position: relative;
}
.rewardUsers {
  position: relative;
}
.rewardUserscontent {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 95%;
  margin: 0 auto;
  position: relative;
}
.rewardUser{
  width: 15%;
  margin: 0 0.8%;
}
.rewardUser > image{
  width: 100%;
}
 